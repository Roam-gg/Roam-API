{
  "name": "Roam-API",
  "version": "0.1.0",
  "description": "Roam's API",
  "main": "src/index.ts",
  "repository": "https://github.com/Roam-gg/Roam-API.git",
  "author": "Yui Yukihira <yuiyukihira@pm.me>",
  "license": "GPL-3.0",
  "private": false,
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-ts && npm run lint",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --coverage --json --outputFile=test-results.json",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/index.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && eslint \"**/*.{js,ts}\" --fix",
      "pre-push": "yarn run test"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/preset-typescript": "^7.8.3",
    "@types/faker": "^4.1.9",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.1.2",
    "@types/lodash": "^4.14.149",
    "@types/mongoose": "^5.7.1",
    "@types/node": "^13.7.0",
    "@types/orientjs": "^3.0.10",
    "@types/passport": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "apollo-server-testing": "^2.10.0",
    "babel-jest": "^25.1.0",
    "chai": "^4.2.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "expect": "^25.1.0",
    "faker": "^4.1.0",
    "graphql": "^14.6.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "nodemon": "^2.0.2",
    "passport": "^0.4.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^25.2.0",
    "type-graphql": "^0.17.6",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "@typegoose/typegoose": "^6.3.2",
    "apollo-server": "^2.10.0",
    "axios": "^0.19.2",
    "lodash": "^4.17.19",
    "mongodb": "^3.5.2",
    "mongoose": "^5.8.11",
    "typedi": "^0.8.0"
  }
}
